<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/logothongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/tintuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#00BCD4"
        android:text="Solar Boat Challege 2022 - Khơi dậy niềm đam mê khoa học kỹ thuậ " />

    <TextView
        android:id="@+id/ngay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#9E8C8C"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:text="Ngày 30-04-2022" />

    <TextView
        android:id="@+id/thongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:text="Điểm đến của những cá nhân đam mê khoa học công nghệ, Trường CĐKT Cao Thắng với lịch sử hơn 116 năm trồng người, luôn đi đầu trong công tác giáo dục - đào tạo. " />
</LinearLayout>